%h2 Create a new account.

%h3 Already signed up? #{ link_to "Log in &raquo;".html_safe, login_url }

= semantic_form_for @user do |f|
  = f.inputs do
    = f.input :name, :label => "What's your name?"
    = f.input :email, :label => "What's your email?", :input_html => { :value => params[:email] }
    = f.input :password, :label => "What's your password?"
    = f.input :password_confirmation, :label => "Please type your password again."
  = f.buttons do
    = f.commit_button "#{@submit_text.blank? ? "Submit" : @submit_text} &raquo;".html_safe